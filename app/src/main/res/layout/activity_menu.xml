<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="8"
        android:background="@drawable/fondo"
        tools:context=".Menu">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_columnSpan="0"
            android:layout_rowSpan="3"/>
    <TextView
            android:text="Bienvenido"
            android:textColor="@color/blanco"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:layout_column="0"/>

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_rowSpan="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:src="@drawable/sleepy"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
    />

    <TextView
            android:text="Escoje una opción del menú"
            android:textColor="@color/blanco"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_row="1"
            android:layout_column="0"

    />

    <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="40dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="20dp"
            android:layout_row="4"
            android:layout_column="0">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/ic_calculation"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Mis materias"
        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            app:cardCornerRadius="20dp"
            android:layout_row="4"
            android:layout_column="1">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:srcCompat="@drawable/dish"
                android:layout_gravity="center">

        </ImageView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Mi Horario"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="40dp"
            app:cardCornerRadius="20dp"
            android:layout_row="5"
            android:layout_column="0">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/sprinkles"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Mi avance curricular"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            app:cardCornerRadius="20dp"
            android:layout_row="5"
            android:layout_column="1">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/recipe"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Clave de asignaturas"/>

    </android.support.v7.widget.CardView>

</GridLayout>