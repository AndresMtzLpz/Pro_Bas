<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/fondo"
        tools:context=".Piramide">
    <TextView
            android:text="PirÃ¡mide Alimenticia"
            android:textColor="@color/blanco"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/piramide"
    />

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TableRow
                android:background="@color/rojo_claro"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:text="Nivel"
                    android:textColor="@color/blanco"
                    android:layout_weight="2"
                    android:id="@+id/Nivel"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:text="Alimentos"
                    android:textColor="@color/blanco"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/Alimentos"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:text="Porcentaje"
                    android:textColor="@color/blanco"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/Porcentaje"
            />
        </TableRow>

        <TableRow
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/blanco">
            <TextView
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/N1"/>
            <TextView
                    android:layout_width="150dp"
                    android:text="Chocolates,dulces, aceite,mantequilla"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/A1"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="10%"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/P1"/>

        </TableRow>

        <TableRow
                android:padding="5dp"
                android:background="@color/blanco"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:text="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/N2"/>
            <TextView
                    android:layout_width="150dp"
                    android:text="Quesos, leche, carne, huevos, frutos secos"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/A2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="20%"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/P22"/>

        </TableRow>

        <TableRow
                android:padding="5dp"
                android:background="@color/blanco"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:text="3"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/N3"/>
            <TextView
                    android:layout_width="150dp"
                    android:text="Frutas y Verduras"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/A3"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="30%"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/P3"/>

        </TableRow>

        <TableRow
                android:padding="5dp"
                android:background="@color/blanco"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:text="4"
                    android:layout_weight="2"
                    android:id="@+id/N4"/>
            <TextView
                    android:layout_width="150dp"
                    android:text="Panes y cereales integrales, arroz, pasta"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/A4"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="40%"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/P4"/>

        </TableRow>

    </TableLayout>




</LinearLayout>